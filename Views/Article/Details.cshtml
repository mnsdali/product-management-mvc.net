@model Article

<h4 class="text-center"> QRs de l'article: @Model.SerieNumber </h4>
<div class="card " id="pdf-content">
    <div class="card-body">
        <table>
            <thead>
                <tr>
                    <th><h2><pre>   #  </pre></h2></th>
                    <th><h2><pre>      S/N d'article </pre></h2></th>
                    <th><h2><pre>         # </pre> </h2></th>
                </tr>
            </thead>
        </table>
        <br>
        <div class="section-body">

            <div class="w-75 mx-auto qrs-variation">

                        <hr>
                <img src=@Url.Content($"~/QrCodes/Articles/{Model.Variation.Designation}/{Model.SerieNumber}_serieNumber.svg") class="qr_code" width=230>

                
            </div>

        </div>
    </div>
</div>
<div class="d-flex justify-content-center">
    <button type="button" id="print-qrs-btn" class="btn btn-success checkout-btn" title="Impression des qrs"
            data-toggle="tooltip" data-placement="bottom">
        <i class="icon-printer mr-2"></i>Imprimer
    </button>
</div>
